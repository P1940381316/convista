<core:FragmentDefinition xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:ui.com="sap.suite.ui.commons" xmlns:fm="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:viz.data="sap.viz.ui5.data"
	xmlns:viz="sap.viz.ui5.controls" xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds">
	<Page id="page2" showHeader="false" horizontal="true" vertical="true" height="100%">
		<content>
			<l:FixFlex>
				<l:fixContent>
					<Panel id='contentPanel2' class="panelStyle" headerText="LSV-Lastschriften" expanded="true" width="auto">
						<HBox class="settingsHBox">
							<VBox class='settingsBox' width="20%">
								<Label text="Anzahl Lastschriften" id="anzahlLastschrift" class="settingsLabel"/>
								<ObjectNumber class="sapUiSmallMarginBottom" number="42.232"/>
							</VBox>
							<VBox class='settingsBox' width="20%">
								<Label text="Volumen LastschrifteinzÃ¼ge" id="labellastschrift" class="settingsLabel"/>
								<ObjectNumber class="sapUiSmallMarginBottom" number="21.232.232,00" unit="EURO"/>
							</VBox>
							<VBox class='settingsBox' width="20%">
								<Label text="LSV Quote" id="labelquote" class="settingsLabel"/>
								<ObjectNumber class="sapUiSmallMarginBottom" number="0,3"/>
							</VBox>
						</HBox>
					</Panel>
				</l:fixContent>
				<l:flexContent>
					<ui.com:ChartContainer id="idChartContainerBarLine" showFullScreen="true" showPersonalization="false" autoAdjustHeight="true"
						showLegend="true" title="Lastschrift">
						<ui.com:dimensionSelectors>
							<Select id="idoSelect1" change="handleSelectionChangeLastschrift">
								<core:Item key="0" text="Vorjahr"/>
								<core:Item key="1" text="Vorperiode"/>
							</Select>
						</ui.com:dimensionSelectors>
						<ui.com:content>
							<ui.com:ChartContainerContent icon="sap-icon://column-chart-dual-axis" title="Combined Chart">
								<ui.com:content>
									<viz:Popover id="idPopOverBarLine"></viz:Popover>
									<viz:VizFrame id="idVizFrameBarLine" uiConfig="{applicationSet:'fiori', 'showErrorMessage':true }" height="100%" width="100%"
										vizType="combination">
										<viz:dataset>
											<viz.data:FlattenedDataset data="{/Lastschrift}">
												<viz.data:dimensions>
													<viz.data:DimensionDefinition name="month1" value="{month}"/>
												</viz.data:dimensions>
												<viz.data:measures>
													<viz.data:MeasureDefinition name="Anzahl Lastschrift" value="{anzahlLastschrift}"/>
												</viz.data:measures>
												<viz.data:measures>
													<viz.data:MeasureDefinition name="Volumen Lastschrift" value="{volumenLastschrift}"/>
												</viz.data:measures>
											</viz.data:FlattenedDataset>
										</viz:dataset>
										<viz:feeds>
											<viz.feeds:FeedItem uid="valueAxis" type="Measure" values="Anzahl Lastschrift"/>
											<viz.feeds:FeedItem uid="valueAxis" type="Measure" values="Volumen Lastschrift"/>
											<viz.feeds:FeedItem id="feedCategoryAxisBarLine" uid="categoryAxis" type="Dimension" values="month1"/>
										</viz:feeds>
									</viz:VizFrame>
								</ui.com:content>
							</ui.com:ChartContainerContent>
						</ui.com:content>
					</ui.com:ChartContainer>
				</l:flexContent>
			</l:FixFlex>
		</content>
	</Page>
</core:FragmentDefinition>