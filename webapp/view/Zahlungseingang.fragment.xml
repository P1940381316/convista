<core:FragmentDefinition xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:ui.com="sap.suite.ui.commons" xmlns:fm="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:viz.data="sap.viz.ui5.data"
	xmlns:viz="sap.viz.ui5.controls" xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds">
	<Page id="page1" height="100%" class="sapUiFioriObjectPage" showHeader="false" showFooter="false">
		<content>
			<l:FixFlex>
				<l:fixContent>
					<Panel id='contentPanel1' class="panelStyle" headerText="Zahlungseingang" expanded="true" width="auto">
						<HBox class="settingsHBox">
							<VBox class='settingsBox' width="20%">
								<Label text="Anzahl Zahlungseingänge" id="label01Za" class="settingsLabel"/>
								<ObjectNumber class="sapUiSmallMarginBottom" number="42.232"/>
							</VBox>
							<VBox class='settingsBox' width="20%">
								<Label text="Volumen Zahlungseingänge" id="label01Zb" class="settingsLabel"/>
								<ObjectNumber class="sapUiSmallMarginBottom" number="21.232.232,00" unit="EURO"/>
							</VBox>
						</HBox>
					</Panel>
				</l:fixContent>
				<l:flexContent>
					<ui.com:ChartContainer id="idChartContainer" showFullScreen="true" showPersonalization="false" autoAdjustHeight="true" showLegend="true"
						title="Umsatz" height="110%">
						<ui.com:content>
							<ui.com:ChartContainerContent icon="sap-icon://bar-chart" title="Bar Chart">
								<ui.com:content>
									<viz:Popover id="idPopOver"></viz:Popover>
									<viz:VizFrame id="idVizFrame" uiConfig="{applicationSet:'fiori', 'showErrorMessage':true }" height="100%" width="100%" vizType="column">
										<viz:dataset>
											<viz.data:FlattenedDataset data="{/Umsatz}">
												<viz.data:dimensions>
													<viz.data:DimensionDefinition name="month1" value="{month}"/>
												</viz.data:dimensions>
												<viz.data:measures>
													<viz.data:MeasureDefinition name="Umsatz" value="{proMonat}"/>
												</viz.data:measures>
											</viz.data:FlattenedDataset>
										</viz:dataset>
										<viz:feeds>
											<viz.feeds:FeedItem uid="valueAxis" type="Measure" values="Umsatz"/>
											<viz.feeds:FeedItem id="feedCategoryAxis" uid="categoryAxis" type="Dimension" values="month1"/>
										</viz:feeds>
									</viz:VizFrame>
								</ui.com:content>
							</ui.com:ChartContainerContent>
						</ui.com:content>
					</ui.com:ChartContainer>
				</l:flexContent>
			</l:FixFlex>
		</content>
	</Page>
</core:FragmentDefinition>