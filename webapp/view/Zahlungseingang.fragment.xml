<core:FragmentDefinition xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:ui.com="sap.suite.ui.commons" xmlns:fm="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:viz.data="sap.viz.ui5.data"
	xmlns:viz="sap.viz.ui5.controls" xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds">
	<Page id="page1" height="100%" class="sapUiFioriObjectPage" showHeader="false" showFooter="false">
		<content>
			<l:FixFlex>
				<l:fixContent>
					<Panel id='contentPanel1' class="panelStyle" headerText="Zahlungseingang" expanded="true" width="auto">
						<HBox class="settingsHBox">
							<VBox class='settingsBox' width="20%">
								<ObjectIdentifier title="Anzahl Zahlungseingänge" titleActive="false"/>
								<!-- <Label text="" id="label01Za" design="Bold" class="settingsLabel"/> -->
								<ObjectNumber class="sapUiSmallMarginBottom" number="42.232" state="Success" />
							</VBox>
							<VBox class='settingsBox' width="20%">
								<ObjectIdentifier title="Volumen Zahlungseingänge" titleActive="false"/>
								<!--	<Label text="Volumen Zahlungseingänge" id="label01Zb" design="Bold" class="settingsLabel"/> -->
								<ObjectNumber class="sapUiSmallMarginBottom" number="21.232.232,00" unit="EURO" state="Success" />
							</VBox>
						</HBox>
					</Panel>
				</l:fixContent>
				<l:flexContent>
					<ui.com:ChartContainer id="idChartContainer1" showFullScreen="true" showPersonalization="false" autoAdjustHeight="true" showLegend="true"
						title="Umsatz" height="100%">
						<ui.com:dimensionSelectors>
							<Select id="idoSelectEing" change="handleSelectionChangeLastschrift">
								<core:Item key="0" text="Lastschrift"/>
								<core:Item key="1" text="Kreditkarte"/>
								<core:Item key="2" text="Verrechnungscheck"/>
								<core:Item key="3" text="PayPal"/>
							</Select>
						</ui.com:dimensionSelectors>
						<ui.com:content>
							<ui.com:ChartContainerContent icon="sap-icon://bar-chart" title="Bar Chart">
								<ui.com:content>
									<viz:Popover id="idPopOver"></viz:Popover>
									<viz:VizFrame id="idVizFrame" uiConfig="{applicationSet:'fiori', 'showErrorMessage':true }" height="100%" width="100%" vizType="column">
										<viz:dataset>
											<viz.data:FlattenedDataset data="{/Umsatz}">
												<viz.data:dimensions>
													<viz.data:DimensionDefinition name="gruppe" value="{gruppe}"/>
												</viz.data:dimensions>
												<viz.data:measures>
													<viz.data:MeasureDefinition name="Lastschrift" value="{Lastschrift}"/>
												</viz.data:measures>
												<viz.data:measures>
													<viz.data:MeasureDefinition name="Kreditkarte" value="{Kreditkarte}"/>
												</viz.data:measures>
												<viz.data:measures>
													<viz.data:MeasureDefinition name="Verrechnungsscheck" value="{Verrechnungsscheck}"/>
												</viz.data:measures>
												<viz.data:measures>
													<viz.data:MeasureDefinition name="PayPal" value="{PayPal}"/>
												</viz.data:measures>
											</viz.data:FlattenedDataset>
										</viz:dataset>
										<viz:feeds>
											<viz.feeds:FeedItem uid="valueAxis" type="Measure" values="Lastschrift"/>
											<viz.feeds:FeedItem uid="valueAxis" type="Measure" values="Kreditkarte"/>
											<viz.feeds:FeedItem uid="valueAxis" type="Measure" values="Verrechnungsscheck"/>
											<viz.feeds:FeedItem uid="valueAxis" type="Measure" values="PayPal"/>
											<viz.feeds:FeedItem uid="categoryAxis" type="Dimension" values="gruppe" id="feedCategoryAxis"/>
										</viz:feeds>
									</viz:VizFrame>
								</ui.com:content>
							</ui.com:ChartContainerContent>
						</ui.com:content>
					</ui.com:ChartContainer>
				</l:flexContent>
			</l:FixFlex>
		</content>
	</Page>
</core:FragmentDefinition>